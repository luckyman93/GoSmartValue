@model IEnumerable<GoSmartValue.Web.ViewModels.RoleViewModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewBag.Title = "All User Roles";
    Layout = "_Layout";
}
<form>
    <h1>All UserRoless</h1>

    <a class="btn btn-primary mb-3" style="width: auto"
       asp-controller="administration" asp-action="CreateRole">
        Create UserRoles
    </a>

    @if (Model.Any())
    {
        foreach (var role in Model)
        {
            <div class="card">
                <div class="card-header">
                    UserRoles Id: @role.Id
                </div>
                <div class="card-body">
                    <h5 class="card-title">@role.RoleName</h5>
                </div>
                <div class="card-footer">
                    <a class="btn btn-primary"
                       asp-controller="administration" asp-action="EditRole" asp-route-id="@role.Id">
                        Edit
                    </a>
                    <a class="btn btn-danger" style="width: auto"
                       asp-controller="administration" asp-action="DeleteRole" asp-route-id="@role.Id">
                        Delete
                    </a>
                </div>
            </div>
        }
    }
    else
    {
        <div class="card">
            <div class="card-header">
                No roles created yet.
            </div>
            <div class="card-body">
                <h5 class="card-title">
                    Use the button below to create a role
                </h5>
            </div>
            <a class="btn btn-primary" style="width: auto"
               asp-controller="administration" asp-action="CreateRole">
                Create UserRoles
            </a>
        </div>
    }
</form>