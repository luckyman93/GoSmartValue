@model GoSmartValue.Web.ViewModels.OrganisationViewModel

@{
    ViewBag.Title = "Create new Organisation";
    Layout = "_Layout";
}
<script src="~/js/bootstrap-select.js"></script>
<div class="row">
    <div class="col-md-12 align-content-center">
        <form method="post">
            <fieldset>
                <div class="card-title">
                    <center><h1>Create Organisation</h1></center>
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            </fieldset>
            <fieldset class="border p-2">
                <legend class="w-auto">Details</legend>
                <div class="row">
                    <div class="form-group col">
                        <label asp-for="Name">Organisation Name</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group col">
                        <label asp-for="PhoneNumbers">Main Phone Number</label>
                        <input asp-for="PhoneNumbers" class="form-control" />
                        <span asp-validation-for="PhoneNumbers" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="PostalAddress">Postal Address</label>
                    <input asp-for="PostalAddress" class="form-control" />
                    <span asp-validation-for="PostalAddress" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PhysicalAddress">Physical Address</label>
                    <input asp-for="PhysicalAddress" type="text" class="form-control" />
                    <span asp-validation-for="PhysicalAddress" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PrimaryUser">Main Contact</label>
                    <input asp-for="PrimaryUser" type="text" class="form-control" />
                    <span asp-validation-for="PrimaryUser" class="text-danger"></span>
                </div>
            </fieldset>
            <fieldset class="border p-2">
                <button type="submit" class="btn btn-primary">Register</button>
            </fieldset>
        </form>
    </div>
</div>