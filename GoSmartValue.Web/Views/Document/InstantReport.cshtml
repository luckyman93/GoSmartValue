@{
	ViewData["Title"] = "Valuation Report";
	Layout = "Layouts/_Report";

	var localityName = Model.Comparable.LocalityId.HasValue ? CachedStorage.GetLocalityName(Model.Comparable.LocalityId.Value) : null;

}
