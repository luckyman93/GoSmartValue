<div class="background-color" style="margin:0">

	<div>
		<div style="padding-top:10%;padding:15px;">
			<div class="col-sm-12">

				<table style="table-layout: fixed; width: 100%">
					<tbody>
						<tr>
							<td style="background-color:#583e4c"></td>

							<td>
								<h2>BWP @Model.EstimatedValue.ToString("0,0,00.00")</h2>
								<h3>Estimated Value</h3>
								<hr style="border: 4px solid;color:#1a237e" />
							</td>
						</tr>
						<tr>
							<td style="background-color:#583e4c"></td>

							<td class="p-2">
								<p>
									Automatically Generated Valuation @Model.EstimatedOn.ToString("dd/MM/yyyy")

								</p>
								<p>

									Estimated value of @Model.Comparable.LandUse
									Plot @Model.Comparable.PlotNo
									located in @localityName?.Result
									, @CachedStorageService.Cities[Model.Comparable.LocationId]
									
									<hr style="border: 4px solid;color:#1a237e" />
								</p>
								
							</td>
						</tr>
						<tr>
							<td class="text-center d-block" style="background-color:#1a237e;color:#fff">
								<h1>INSTANT</h1>
								<h1>REPORT</h1>
							</td>

							<td>
								<h4>Features</h4>
								<div class="row p-2">
									<div class="col-sm-6">
										<p>@Model.Kitchens Kitchen(s)</p>
										<p>@Model.Toilets Toilet(s) </p>
										<p>@Model.Garages Garage(s)</p>
									</div>
									<div class="col-sm-6">
										<p>
											@Model.BedRooms BedRoom(s)
										</p>
										<p>
											@Model.SittingRooms SittingRoom(s)
										</p>
										<p>
											@Model.BathRooms BathRoom(s)
										</p>
									</div>
								</div>
								
								<ul>
									@if (@Model.SwimmingPool)
									{
										<li>Swimming Pool</li>
									}
									@if (@Model.MotorizedGate)
									{
										<li>Motorized Gate</li>
									}
									@if (@Model.ElectricFence)
									{
										<li>Electric Fence</li>
									}
									@if (@Model.Paved)
									{
										<li>Paved</li>
									}
									@if (@Model.FirePlace)
									{
										<li>Fireplace</li>
									}
									@if (@Model.BoundaryWall)
									{
										<li>Boundary wall</li>
									}
									@if (@Model.OutdoorEntertainmentArea)
									{
										<li>Outdoor Entertainment Area</li>
									}
									@if (@Model.OtherSpecialFeatures != null)
									{
										<li>@Model.OtherSpecialFeatures</li>
									}
								</ul>
							</td>
						</tr>
						<tr>
							<td style="background-color:#583e4c"></td>

							<td>
								
								<hr style="border: 4px solid;color:#1a237e" />
							</td>
						</tr>
						<tr>
							<td style="background-color:#583e4c">
							</td>

							<td>
								
							</td>
						</tr>

					</tbody>
					<tfoot>
						<tr  style="background-color:#000;color:#fff;">
							<td colspan="2" class="text-center p-2"><p style="font-size:20px">WWW.GOSMARTVALUE.COM</p></td>
						</tr>
					</tfoot>
				</table>

			</div>
		</div>
	</div>

</div>


