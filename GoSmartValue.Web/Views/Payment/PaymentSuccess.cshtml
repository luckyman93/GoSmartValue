@model AV.Contracts.Models.Payment.Models.PaymentModel

@{
	ViewData["Title"] = "Complete Payment";

	Layout = "_Layout";
}

<div class="outer container-fluid image-container set-full-height" style="background-image:url(/valuationsIndex.jpg);background-size:cover;height:100vh">
	<div class="middle container-fluid" style="padding-top:80px">
		<div class=" inner container-fluid">
			<div class="shadow col-md-12 container-fluid" style="background-color: #ffffff;">
				<div style="padding:0;width:100%;padding:10px">
					<div class=" col-sm-12 text-center">
						<h3>Invoice</h3>
					</div>
					<div class="row col-sm-12">
						<div class="col-sm-2">Reference #: @Model.Reference</div>
						<div class="col-sm-8"></div>
						<div class="col-sm-2">Date: @Model.UpdatedDate</div>
					</div>
					<table class="table table-hover">
                        <thead>
                        <tr>
                            <th scope="col">Item</th>
                            <th scope="col"></th>
                            <th scope="col"></th>
                            <th scope="col">Price</th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr>
                            <td>@Model.Type.ToString()</td>
                            <td></td>
                            <td></td>
                            <td>@Model.Currency: @Model.Amount.ToString("0.00")</td>
                        </tr>
                        </tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>
