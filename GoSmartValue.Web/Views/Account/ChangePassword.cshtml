@model GoSmartValue.Web.Models.ResetPasswordViewModel

@{
    ViewData["Title"] = "Change Password";

    Layout = "_Layout";
}

<div class="outer container-fluid image-container set-full-height" style="background-image:url(/Canva.jpg);">
    <div class="middle" style="padding-top:50px">
        <div class=" inner ">
            <div class="shadow col-12 col-md-4 offset-md-4" style="background-color: #ffffff;">
                <div class="container-fluid ">
                    <div class="form-group p-2 text-center"><h4>Change Password</h4></div>
                    <div class="form-group label-floating">
                        <label class="control-label">Current Password</label>
                        <input asp-for="Password" type="password" class="form-control" required="" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group label-floating">
                        <label class="control-label">New Password</label>
                        <input asp-for="Password" type="password" class="form-control" required="" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group label-floating">
                        <label class="control-label">Confirm Password</label>
                        <input asp-for="PasswordConfirm" type="password" class="form-control"  required="" />
                        <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
                    </div>

                        <div class="form-group col-sm-12">

                            <button class="btn  btn-blue btn-block" type="submit" role="button" style="color:#ffffff">Submit</button>
                        </div>
                </div>
            </div>
        </div>
    </div>
</div>
